# Server Configuration
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/piercing_qr?schema=public"

# Redis (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Stripe (optional - leave empty to disable)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID=

# Firebase Cloud Messaging (optional - leave empty to disable)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
# Or provide path to service account JSON
FIREBASE_SERVICE_ACCOUNT_PATH=

# Admin API
ADMIN_TOKEN=your-admin-secret-token
